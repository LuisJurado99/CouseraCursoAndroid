<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="5dp"
    tools:context=".MostrarDatos">


    <TextView
        android:id="@+id/tvConfirmar"
        style="@style/AppTheme.TextInputLayoutDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDatosdp"
        android:hint="Confirmar Datos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tvName"
        style="@style/AppTheme.TextInputLayoutDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/txtNombreD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmar" />

    <TextView
        android:id="@+id/tvNameInsert"
        android:textSize="@dimen/textsizeoculto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop= "@dimen/marginDatosdp"
        android:hint="Name View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmar" />

    <TextView
        android:id="@+id/tvPhone"
        style="@style/AppTheme.TextInputLayoutDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDatosdp"
        android:hint="Phone Number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameInsert" />

    <TextView
        android:id="@+id/tvPhoneInsert"
        android:textSize="@dimen/textsizeoculto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDatosdp"
        android:hint="Phone View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPhone"
        app:layout_constraintTop_toBottomOf="@id/tvNameInsert" />

    <TextView
        android:id="@+id/tvEmail"
        style="@style/AppTheme.TextInputLayoutDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDatosdp"
        android:hint="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneInsert" />

    <TextView
        android:id="@+id/tvEmailInsert"
        android:textSize="@dimen/textsizeoculto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDatosdp"
        android:hint="Name View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEmail"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneInsert" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/AppTheme.TextInputLayoutDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDatosdp"
        android:hint="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEmailInsert" />

    <TextView
        android:id="@+id/tvDateInsert"
        android:textSize="@dimen/textsizeoculto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDatosdp"
        android:hint="Name View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvDate"
        app:layout_constraintTop_toBottomOf="@id/tvEmailInsert" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/AppTheme.TextInputLayoutDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDatosdp"
        android:hint="Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDateInsert" />

    <TextView
        android:id="@+id/tvDescriptionInsert"
        android:textSize="@dimen/textsizeoculto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDatosdp"
        android:hint="Name View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />


    <Button
        android:id="@+id/btnGuardar"
        style="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editar_datos"
        android:onClick="regreso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>