<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:icon"> @color/icons</item>
        <item name="android:dividerVertical">@color/divider</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textSize">@dimen/textsize</item>

    </style>

    <style name="AppTheme.Button">
        <item name="android:textSize">@dimen/textsize</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/icons</item>
    </style>
    <style name="AppTheme.TextInputLayoutMain">
        <item name="android:background">@color/primary_light</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textSize">@dimen/textsize</item>
    </style>
    <style name="AppTheme.TextInputLayoutDatos">
        <item name="android:background">@color/primary_light</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:layout_margin">@dimen/marginDatosdp</item>
        <item name="android:textSize">@dimen/textsizeoculto</item>
    </style>
    <style name="AppTheme.Icon">
        <item name="android:background">@color/icons</item>
    </style>
    <style name="BarDatos" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:icon"> @color/icons</item>
        <item name="android:dividerVertical">@color/divider</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textSize">@dimen/textsize</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppTheme.MostrarDatos">
        <item name="android:background">@color/primary_light</item>
    </style>

</resources>