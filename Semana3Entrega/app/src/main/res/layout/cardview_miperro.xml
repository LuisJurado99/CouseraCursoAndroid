<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMiPerroFoto"
            android:layout_width="@dimen/tamanioImageMiPerro"
            android:layout_height="@dimen/tamanioImageMiPerro"
            android:screenReaderFocusable="true"
            android:src="@drawable/perro5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMiPerroLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Ejemplo"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/ivHuesoMiName"
                android:layout_width="@dimen/tamanioImagenCardView"
                android:layout_height="@dimen/tamanioImagenCardView"
                android:layout_gravity="end"
                android:src="@drawable/hueso_color" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>